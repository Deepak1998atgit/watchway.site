<%- include("partials/header") %>


	<%- include("partials/navbar",{user:user,CartLength:CartLength}) %>
		<section class="section-sm">
			<div class="container">

				<div class="row">
					<div class="col-lg-3 col-md-4">
						<div class="category-sidebar">
							<div class="widget price-range w-100">
								<h4 class="widget-header">Price Range</h4>

								<div class="block">
									<form id="priceSlider" action="/shop" method="post">
										<div class="d-flex justify-content-between mt-2">
											<span class="value">₹1000 - ₹30000</span>
										</div>
										<input class="range-track w-100" type="text" data-slider-min="1000"
											data-slider-max="30000" data-slider-step="5"
											data-slider-value="[1000,30000]" name="rangeValues">

										<button type="submit" class=" my-4 btn btn-dark" style="width: 100%;">Apply</button>
									</form>
								</div>
							</div>
							<div class="widget category-list">
								<h4 class="widget-header">All Category</h4>
								<ul class="category-list">
									<li><a href="/sortProductByPrice?value=Omega">Omega<span></span></a></li>
									<li><a href="/sortProductByPrice?value=Rolex">Rolex<span></span></a></li>
									<li><a href="/sortProductByPrice?value=Apple">Apple<span></span></a></li>
									<li><a href="/sortProductByPrice?value=Omega">Seiko<span></span></a></li>
								
								
								</ul>
							</div>
							<div class="widget category-list">
								<h4 class="widget-header">Sort</h4>
								<ul class="category-list">
									
									<li><a href="/sortProductByPrice?value=decenting">High Price to Low Price<span></span></a></li>
									<li><a href="/sortProductByPrice?value=ascenting">Low price to High Price<span></span></a></li>
								
								</ul>
							</div>


							


							

						</div>
					</div>
					<div class="col-lg-9 col-md-8">
						<div class="category-search-filter">
							<div class="row">
								<div class="col-md-6 text-center text-md-left">
									<strong>All Poducts</strong>
									<% if(locals.minValue){ %>
										<h3 class="text-danger"> ₹<%= minValue %>  to  ₹<%= maxValue %></h3>
									<% } %>
									
									

								</div>
								<div class="col-md-6 text-center text-md-right mt-2 mt-md-0">
									

								</div>
							</div>
						</div>
						<div class="product-grid-list">
							<div class="row mt-30">
								<% if (products.length > 0) { %>
								
							
								<% products.forEach((product)=> { %>
									<div class="col-lg-4 col-md-6">
										<!-- product card -->

										<div class="product-item bg-light">
											<div class="card">
												<div class="thumb-content">
													<!-- <div class="price">$200</div> -->
													
													<a href="/singleProduct/<%= product._id %>">
														<img class="card-img-top img-fluid"
															src="<%= product.photo[0] %>" style="height: 400px;" alt="Card image cap">
													</a>
												</div>
												<div class="card-body">
													<h4 class="card-title"><a href="single.html">
															<%= product.name %>
														</a></h4>
													<ul class="list-inline product-meta">
														<li class="list-inline-item">
															<a href="/singleProduct/<%= product._id %>"><i class="fa fa-folder-open-o"></i>
																<%= product.category_name %>
															</a>
														</li>
														<li class="list-inline-item">
															<h2 class="text-success">₹<%= product.price %></h1>
														</li>
													</ul>
													<!-- <p class="card-text">Lorem ipsum dolor sit amet, consectetur
														adipisicing
														elit. Explicabo, aliquam!</p> -->

												</div>
											</div>
										</div>



									</div>
									<% })%>
								<% } else { %>
									<div class="col-lg-12">
										<p>No products found.</p>
									</div>
								<% } %>

							
								
							

								



							</div>
						</div>
