					// Store the selected rating in localStorage
					localStorage.setItem('selectedRating', rating);

					// Send a POST request to the backend
					$.ajax({
						url: $('#ratingForm').attr('action'), // URL from the form's action attribute
						method: 'POST',
						data: {
