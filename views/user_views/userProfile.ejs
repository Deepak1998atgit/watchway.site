<%- include("partials/header") %>

  <%- include("partials/navbar") %>
    <!-- User Profile -->
    <section class="user-profile section" style="background-image: url('/user_public/images/otp/otpBackground.jpg')">
      <div class="container">
        <div class="row">
          <div class="col-lg-4">
            <div class="sidebar">
              <!-- User Widget -->
              <div class="widget user shadow-lg" style="border-radius: 30px;">
                <!-- User Image -->
                <div class="image d-flex justify-content-center">
                  <img src="/user_public/images/user/user-thumb.jpg" alt="" class="">

                </div>
                <!-- User Name -->

                <h5 class="text-center">
                  <%= userDetail.name %>
                </h5>
                <ul>


                  <li>
                    <h3>Phone:<%= userDetail.phone %>
                    </h3>
                  </li>
                  <li>
                    <h3>Email:<%= userDetail.email %>
                    </h3>
                  </li>
                  <% if(wallet) { %>
                    <li>
                      <h6><img src="/user_public/images/wallet.png" style="width: 35px;" alt="">Wallet Amount:â‚¹<span
                          class="text-dark">
                          <%= wallet.amount %>/-
                        </span> </h6>

                    </li>
                  <% } %>


                </ul>
              </div>

              <div class="address-container">
                <% userDetail.address.forEach(function(addr, index) { %>
                  <ul style="<%= index > 0 ? 'display: none;' : '' %>">
                    <li>
                      <p>
                      <h3 class="text-dark">
                        <strong>ADR.<%= index + 1 %></strong>
                        <%= addr.name %>,
                          <br>
                          <%= addr.address %>,
                            <br>
                            <%= addr.place %>,

                              <%= addr.state %>,
                                <br>
                                Pin: <%= addr.pincode %>,

                                  <br>
                                  Phone: <%= addr.phone %>.

                      </h3>
                      </p>
                    </li>
                    <li class="mx-5">
                      <button data-item-id="<%= addr._id %>" class="myButtonInside btn btn-success">
                        <span>Update</span>
                      </button>
                      <button data-item-id="<%= addr._id %>" class="btn removeButton btn-danger">
                        <span>Delete</span>
                      </button>
