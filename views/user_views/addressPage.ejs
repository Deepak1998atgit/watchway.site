                                    <form  id="addressForm" action="/addAddress" method="post">
                                        <!-- First Name -->
                                        <div class="form-group">
                                            <label for="first-name">Name<strong style="color:red;">*</strong></label>
                                            <input type="text" class="form-control" id="first-name" name="name"
