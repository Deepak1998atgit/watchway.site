<%- include("partials/header") %>
    <div class="container-scroller">
        <!-- partial:partials/_sidebar.html -->
        <%- include("partials/sidebar") %>
            <!-- partial -->
            <div class="container-fluid page-body-wrapper">
                <!-- partial:partials/_navbar.html -->
                <%- include("partials/navbar") %>
                    <div class="container-fluid page-body-wrapper-lg">
                        <!-- partial -->
                        <div class="main-panel">

                            <div class="main-panel">
                                <div class="content-wrapper">
                                    <div class="page-header">
                                        <!-- <h3 class="page-title"> Form elements </h3> -->

                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 grid-margin stretch-card justify-content-center ">
                                            <div class="card ">
                                                <div class="card-body ">
                                                    <h4 class="card-title">Update the Product Here</h4>

                                                    <form class="forms-sample" action="/updateProduct/<%= user._id %>"
                                                        method="POST" enctype="multipart/form-data">
                                                        <div class="form-group">
                                                            <label for="exampleInputUsername1">Update Product</label>

                                                            <input type="text" class="form-control" type="text"
                                                                name="name" value="<%= user.name %>"
                                                                id="exampleInputUsername1" placeholder="Product name">

                                                        </div>

                                                        <div class="form-group">
                                                            <label for="exampleInputEmail1">Update Price</label>

                                                            <input type="number" class="form-control" name="price"
                                                                value="<%= user.price %>" id="exampleInputPassword1"
                                                                placeholder="price">


                                                        </div>
                                                       


                                                        <div class="form-group">
                                                            <label for="image">Photo file:</label>
                                                            <input type="file" class="form-control-file" id="photo"
                                                                name="photo" multiple>
                                                            <img src="/<%= user.photo %>" width="100"
                                                                class="img-thumbnail mt-3" alt="">

                                                        </div>



                                                        <div class="form-group dropdown mt-4" style="display:inline">
                                                            <button type="button" class="btn btn-light"
                                                                data-toggle="dropdown">
                                                                Categories
                                                                <select name="category">
                                                                    <% category.forEach((product) =>{ %>
                                                                        <option value="<%= product.category %>" <% if
                                                                            ( product.category === user.category_name) { %>
                                                                            selected
                                                                            <% } %>>
                                                                                <%= product.category %>
                                                                        </option>
                                                                        <% }); %>
                                                                </select>
                                                            </button>
                                                        </div>



                                                        <button type="submit" class="btn btn-dark mx-5 ">Click to
                                                            Update</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <%- include("partials/footer") %>